<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/nash" />

        <TextView
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:text="Update Stock"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>

        <View
            android:id="@+id/vwadd"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/radius2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arr"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="340dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/boxes"/>

        <TextView
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:text="Add Stock"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="125dp"
            android:layout_marginLeft="140dp"/>


        <View
            android:id="@+id/vwrmv"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/radius2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arr"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="340dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="201dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/loan"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Remove Stock"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="214dp"
            android:layout_marginLeft="140dp"/>


        <View
            android:id="@+id/vwdlt"
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/radius2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arr"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="340dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Delete Stock"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="140dp"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bin"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/nash"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <!-- ImageView -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/home"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Home"
                android:textColor="@color/white"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"/>


            <Space
                android:layout_width="62dp"
                android:layout_height="match_parent" />


            <ImageView
                android:id="@+id/ivListMusic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/history"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="History"
                android:textColor="@color/white"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="2dp"/>

            <Space
                android:layout_width="57dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/profile"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="2dp"/>




        </LinearLayout>
    </RelativeLayout>

</LinearLayout>